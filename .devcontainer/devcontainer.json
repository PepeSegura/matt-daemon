{
    "name": "C/C++ Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "shassain.zsh"
    ],
    "postCreateCommand": "chsh -s $(which zsh)"
}
